{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug server",
            "program": "${workspaceRoot}/server/www"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Debug client",
            "url": "http://localhost:3000/leveldbg.html",
            "webRoot": "${workspaceRoot}"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Debug editor",
            "url": "http://localhost:3000/editordbg.html",
            "webRoot": "${workspaceRoot}"
        },        
        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach to Chrome",
            "port": 9222,
            "webRoot": "${workspaceRoot}"
        }
    ]
}